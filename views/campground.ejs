<% layout('/layouts/boilerplates') %> 
    <h1>All campGrounds</h1>
  



        <% for(let c of campground){ %>
          <div class="card" mb-3>
              <div class="row">

                <div class="col-md-4">
                    <img class='img-fluid' src="<%= c.image[0].url %> " alt="">
                </div>
                <div class="col-md-8">

                  <div class="card-body">
                   <h5 class="card-title"><%= c.title%> </h5> 
                  </div>
                  <div class="card-text">
                    <p>   <%= c.description %> </p>
                  </div>
                  <div class="card-text">
                    <small class="text-muted"> <%= c.location %> </small>
                  </div>

                  <a class="btn btn-primary" href="/campground/<%= c._id %>"> View:<%= c.title %> </a>
                </div>
              </div>
          </div>
            <% } %>

   
